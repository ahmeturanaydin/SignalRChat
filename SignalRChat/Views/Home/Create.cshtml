@{
    ViewData["Title"] = "Login";
    Layout = null;@*Login sayfasında layout kullanmamak için null verdim *@
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!--BU SAYFADA LAYOUT KULLANMADIGIMIZ ICIN SCRİPT VE HEAD  KISIMLARINI LAYOUT'A AKTARMIYORUM -->

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/favicon.png">
    <title>Chat Hub </title>
    <!-- ===== Bootstrap CSS ===== -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <!-- ===== Plugin CSS ===== -->
    <!-- ===== Animation CSS ===== -->
    <link href="~/Content/animate.css" rel="stylesheet">
    <!-- ===== Custom CSS ===== -->
    <link href="~/Content/style.css" rel="stylesheet">
    <!-- ===== Color CSS ===== -->
    <link href="~/Content/red.css" id="theme" rel="stylesheet">

</head>
<body class="mini-sidebar">

    <section id="wrapper" class="login-register">
        <div class="login-box" style="border-radius: 15px;">
            <div class="white-box">
                <form class="form-horizontal form-material" id="loginform" action="/Home/Create" method="post">
                    <h3 class="box-title m-b-20" style="text-align: center">Yeni Kullanıcı</h3>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" name="username" type="text" required="" placeholder="Kullanıcı Adı">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <input class="form-control" name="password" type="password" required="" placeholder="Şifre">
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Kaydet</button>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <a href="~/Security/Login " class="btn btn-info btn-lg btn-block waves-effect waves-light">Giriş sayfasına dön</a>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </section>
    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.2.1.min.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="~/Content/bootstrap.min.js"></script>
    <!-- Menu Plugin JavaScript -->
    <script src="~/Content/sidebarmenu.js"></script>
    <!--slimscroll JavaScript -->
    <script src="~/Content/jquery.slimscroll.js"></script>
    <!--Wave Effects -->
    <script src="~/Content/waves.js"></script>
    <!-- Custom Theme JavaScript -->
    <script src="~/Content/custom.js"></script>
    <!--Style Switcher -->
    <script src="~/Content/jQuery.style.switcher.js"></script>

    <script src="~/Content1/custom.js"></script>

</body>

</html>

